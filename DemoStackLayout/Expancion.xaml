<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="DemoStackLayout.Expancion">
    <ContentPage.Content>
        <StackLayout>
            <BoxView BackgroundColor="Red"
                     HeightRequest="1">
            </BoxView>
            <Label Text="Start"
                   VerticalOptions="StartAndExpand"
                   BackgroundColor="Blue"> 
            </Label>
              <BoxView BackgroundColor="Red"
                     HeightRequest="1">
            </BoxView>
            <Label Text="End"
                   VerticalOptions="EndAndExpand"
                   BackgroundColor="Blue"> 
            </Label>

              <BoxView BackgroundColor="Red"
                     HeightRequest="1">
            </BoxView>
            <Label Text="Center"
                   VerticalOptions=" CenterAndExpand"
                   BackgroundColor="Blue"> 
            </Label>

              <BoxView BackgroundColor="Red"
                     HeightRequest="1">
            </BoxView>
            <Label Text="Fill"
                   VerticalOptions="FillAndExpand"
                   BackgroundColor="Blue"> 
            </Label>
            
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
